const express = require('express');
const mongoose = require('mongoose');
const app = express();

// Yahan apna notepad wala link paste karo
const DB_URL = "mongodb+srv://satyam:Satyam1234@cluster0.7vfmw4i.mongodb.net/?appName=Cluster0";

mongoose.connect(DB_URL)
    .then(() => console.log("Satyam Bhai, Database Connect Ho Gaya!"))
    .catch((err) => console.log("Connection Error: ", err));

app.get('/', (req, res) => {
    res.send("Backend aur Database Mast Chal Rahe Hain!");
});

app.listen(5000, () => {
    console.log("Server is running on port 5000");
});
