const express = require('express');
const mongoose = require('mongoose');
const app = express();

// Tera sahi wala link
const DB_URL = "mongodb+srv://satyam:Satyam1234@cluster0.7vfmw4i.mongodb.net/?appName=Cluster0";

mongoose.connect(DB_URL)
    .then(() => console.log("Satyam Bhai, Database Connect Ho Gaya! âœ…"))
    .catch((err) => console.log("DB Error: ", err));

// Ye hissa "Not Found" ko thik karega
app.get('/', (req, res) => {
    res.send("<h1>Satyam Bhai, Backend aur Database ekdum Mast chal rahe hain!</h1>");
});

const PORT = process.env.PORT || 5000;
app.listen(PORT, () => {
    console.log(`Server is running on port ${PORT}`);
});
